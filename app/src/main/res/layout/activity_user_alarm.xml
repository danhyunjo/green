<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            tools:ignore="Suspicious0dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="알림"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView4"
                    android:textSize="24sp" android:textStyle="bold" android:textColor="@color/main_blue"
                    android:layout_gravity="center_horizontal" android:layout_marginTop="32dp"/>

            <Button
                android:id="@+id/user_alarm"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="10dp"

                android:layout_marginBottom="30dp"
                android:drawableRight="@drawable/questionlist_iamge_setting"
                android:text="질문에 답변이 달렸습니다. \n"
                android:textAlignment="center"
                android:textColor="@color/main_blue"
                android:textStyle="bold"
                app:backgroundTint="#F6F4F9" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>