<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            tools:ignore="Suspicious0dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="알림"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView4"
                    android:textSize="24sp" android:textStyle="bold" android:textColor="#1E2C7B"
                    android:layout_gravity="center_horizontal" android:layout_marginTop="32dp"/>
            <Button
                    android:text="질문에 답변이 달렸습니다.\n(비숑 프리제 / 3세)"
                    android:gravity="left"
                    android:layout_width="295dp"
                    android:layout_height="60dp" android:id="@+id/button3"
                    android:textColor="#1E2C7B" android:textStyle="bold"
                    app:backgroundTint="#F6F4F9" android:layout_gravity="center_horizontal"
                    android:layout_marginTop="35dp" android:layout_marginBottom="30dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>