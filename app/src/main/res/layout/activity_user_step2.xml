<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <TextView
            android:text="STEP2. 식물의 잎 사진을 찍어주세요"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/comment_title" android:textSize="24sp"
            android:textStyle="bold" android:textColor="#0B650D" android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp" android:layout_gravity="center"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="160dp">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/image_preview"
                android:id="@+id/image_preview"
                android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="52dp">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/camera_image"
                android:id="@+id/camera_btn" android:layout_weight="1"
                android:scaleType="centerInside"
                android:background="@color/white" android:layout_marginLeft="50dp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/gallery_image"
                android:id="@+id/gallery_btn"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:background="@color/white" android:layout_marginRight="50dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/user_upload_finish"
        android:layout_width="123dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/nextbutton"
        android:text="업로드 완료"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:backgroundTint="@color/main_blue"

        />
</LinearLayout>